{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++20",
                "-g",
                "${fileDirname}/src/*.cpp",
                "${fileDirname}/src/data/*.cpp",
                "${fileDirname}/src/interpreter/*.cpp",
                "${fileDirname}/src/interpreter/functional/*.cpp",
                "${fileDirname}/src/utils/*.cpp",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-O2",
                "-I./include",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}